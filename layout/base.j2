<!DOCTYPE html>
<html lang="en">
<head>
    {% block starthead %}{% endblock starthead %}
    <meta charset="{{ site_charset }}">
    <title>{% block title %}{{ resource.meta.title }}{% endblock %} | {{ site_title }}</title>
    <meta name="description" content="{{ resource.meta.description }}">
    <meta name="author" content="{{ author.name }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Le HTML5 shim, for IE6-8 support of HTML elements #}

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block basecss %}

    <link href="{{ media_url('css/bootstrap.css') }}" rel="stylesheet"/>
    <link href="{{ media_url('css/font-awesome.min.css') }}" rel="stylesheet"/>
    <link href="{{ media_url('css/bootswatch.css') }}" rel="stylesheet"/>
    {#<link href="{{ media_url('css/site.css') }}" rel="stylesheet"/>#}

    <!--<style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
